{
  "name": "SecondsTimer",

  "version": "1.0",

  "description": "This Chrome extension allows you to set timers in seconds from your browser.",

  "manifest_version": 2,

  "permissions": ["activeTab"],

  "icons": {
    "128": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "SecondsTimer"
  },

  "background": {
    "scripts": ["main.js"],
    "persistent": true
  }
}
